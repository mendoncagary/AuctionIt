div(class="body-div")
	div(class="about")
		div(class="content" class="box-info")

			div(class="container")
				.row
					.col-md-4
						h1(class="box-title") Current Auctions

			.container
				.row
					.col-md-9
						.well.well-sm
							strong Current Auctions
							.btn-group.btn-group-join
								a#clist.btn.btn-default.btn-sm(href='#')
									span.glyphicon.glyphicon-th-list
									| List
								a#cgrid.btn.btn-default.btn-sm(href='#')
									span.glyphicon.glyphicon-th
									| Grid
				#cproducts.row.list-group.item_display
					.item.col-xs-4.col-lg-4(ng-repeat="item in currentItem")
						.thumbnail
							img.group.list-group-image(src='data:image/png;base64,{{item.image}}', alt='')
							.caption
								h4.group.inner.list-group-item-heading.caption_heading(title="{{item.name}}")
									| {{item.name}}
								.row
									.col-xs-10.col-md-5
										p.lead
											| $ {{item.price}}
									.col-xs-12.col-md-6.pull-right
										a(class="btn btn-success" href="" ng-href="/auction/{{item.id}}") Bid on Asset

			.container
				.row
					.col-md-4
						h1(class="box-title") Upcoming Auctions

			.container
				.row
					.col-md-9
						.well.well-sm
							strong Upcoming Auctions
							.btn-group.btn-group-join
								a#list.btn.btn-default.btn-sm(href='#')
									span.glyphicon.glyphicon-th-list
									| List
								a#grid.btn.btn-default.btn-sm(href='#')
									span.glyphicon.glyphicon-th
									| Grid
				#products.row.list-group.item_display
					.item.col-xs-4.col-lg-4(ng-repeat="item in upcomingItem")
						.thumbnail
							img.group.list-group-image(src='data:image/png;base64,{{item.image}}', alt='')
							.caption
								h4.group.inner.list-group-item-heading.caption_heading(title="{{item.name}}")
									| {{item.name}}
								.row
									.col-xs-8.col-md-4
										p.lead
											| ${{item.price}}
									.col-xs-16.col-md-8.pull-right
										div(countdown-directive data-countdown="{{item.time_1}} {{item.time_2}}" class='smallclock pull-right' style='color:white;')
